@mixin placehold-img{
    position: relative;
    & > span{
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        z-index: $z-index-img;
        background-repeat: no-repeat;
        -webkit-background-size: cover;
    }
}

@mixin img{
    position: relative;
    & > span{
        display: block;
        width: 100%;
        height: 100%;
        background-repeat: no-repeat;
        -webkit-background-size: cover;
        position: relative;
    }
}

@mixin avatar($size: $avatar-width) {
    width: #{$size}px;
    height: #{$size}px;
    -webkit-border-radius: $border-radius-max;
    overflow: hidden;
    & > span{
        width: 100%;
        height: 100%;
        display: block;
        overflow:hidden;
        background-repeat: no-repeat;
        -webkit-background-size: cover;
        -webkit-border-radius: $border-radius-max;
    }

}

@mixin square($size: $square-width) {
    width: #{$size}px;
    height: #{$size}px;
    & > span{
        width: 100%;
        height: 100%;
        display: block;
        overflow:hidden;
        background-repeat: no-repeat;
        -webkit-background-size: cover;
    }

}

@mixin horizontal($size: $horizontal-width) {
    width: $size ;
    height:$size * 1.42;
    & > span{
        width: 100%;
        height: 100%;
        display: block;
        overflow:hidden;
        background-repeat: no-repeat;
        -webkit-background-size: cover;
    }

}

@mixin vertical($size: $vertical-width) {
    width: $size;
    height: $size * 0.7;
    & > span{
        width: 100%;
        height: 100%;
        display: block;
        overflow:hidden;
        background-repeat: no-repeat;
        -webkit-background-size: cover;
    }

}




@mixin icon{
    font-family: "icon-min" !important;
    font-size: 32px;
    line-height: $line-height-bar;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    display: block;
    color: rgba(0,0,0,.5);
}
@mixin arrowlink{
    font-family:  "icon-min"  !important;
    font-size: 14px;
    line-height: $line-height-bar;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    display: block;
    color: #bbb;
    content: $icon-arrow;
    position: absolute;
    right: $wrap-padding;
    top: 50%;
    margin-top: -$line-height-bar/2 + 0.5;
    width: 8px;
}
