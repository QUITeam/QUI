

// QUI 新增属性 wenyi
.ui-grid-expand{
  position: relative;
  width: 100%;
  height: auto;
  overflow: hidden;

}

/* 三等分 */
.ui-grid{
    overflow: hidden;
    ul{
      height: auto;
      margin: 0 0 -2px -2px;
      overflow: hidden;
    }
    li{
        // padding-right: 5px;
        // padding-bottom: 10px;
        float: left;
        position: relative;
        // -webkit-box-sizing: border-box;
        // padding: 0 2px 2px 0;

    }
}
.ui-grid-trisect>ul li{
    width: 33.3333%;
}
.ui-grid-info h4{
    position: relative;
    padding: 6px 0 2px;
    margin-right: 1px;
    font-size: 14px;
    padding-left: 10px;
    text-align: left;
    box-sizing: border-box;
}
.ui-grid-info p{
  font-size: 12px;
  padding-left: 10px;
  padding-bottom: 17px;
  color: #777;
}
.ui-grid-info h4 span{
    display: inline-block;
    margin-left: 12px;
    color: $txt-info;
}

/* 二等分 */


.ui-grid-bisect>ul li{
    width: 50%;
}

.ui-grid-info{
    box-sizing: content-box;
    width: 100%;
    padding: 0px 1px 0 0;
}
.ui-grid-bisect,.ui-grid-trisect{
    .ui-img-horizontal>span, .ui-img-vertical>span, .ui-img>span{
            padding: 0 0 2px 2px;
    }

}
