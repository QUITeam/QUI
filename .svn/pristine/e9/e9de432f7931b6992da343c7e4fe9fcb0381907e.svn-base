
@import "../animate/animate";

/**
 * 选项卡
 */

.ui-tab{
    width: 100%;
    overflow: hidden;
}

.ui-tab-nav{
    position:relative;
    top: 0px;
    width: 100%;
    background-color: $default-bg;
    display: box;
    display: -webkit-box;
    font-size: $font-size-title;
    height: $tab-height;
    box-sizing: border-box;
}

.ui-tab-content{
     height: auto;
}
.ui-tab-content > li {
    -webkit-box-flex: 1;
    width: 100%;
    height: auto;
}
.ui-tab-nav li{
    height: $tab-height;
    line-height: $tab-height;
  	text-align: center;
	  color: $txt-info;
    box-sizing: border-box;
    border-bottom: 2px solid transparent;
    width: 100%;
    font-size: 16px;
    -webkit-box-flex:1;
    >span{
      position: relative;
      display: inline-block;
      height: 45px;
      line-height: 45px;
      width: auto;
      padding: 0px 5px;
      >i{
        position: absolute;
        bottom: 0px;
        left: 0px;
        width: 100%;
        height: 2px;
        opacity: 0;
      }

    }

}
.ui-tab-nav li >span >.an{
  background-color:#00a5e0;
  opacity: 1;
}
.ui-tab-nav li.current{
    color: $tab-current-color;
}
.ui-tab-nav li:active{
    opacity: .8;
}
.ui-tab-nav .ui-tab-currentbar{
    position: absolute;
    bottom:0px;
    left: 0px;
    width: 25%;
    color: $tab-current-color;
    border-bottom: 3px $tab-current-border solid;
}

.ui-tab-bisect  .ui-tab-currentbar{
    width: 50%;
}
.ui-tab-trisect .ui-tab-currentbar{
    width: 33.3%;
}

//==========
 .ui-tab-bisect-s,.ui-tab-bisect-l{
  width: 100%;
  display: -webkit-box;
  -webkit-box-pack:center;
  -webkit-box-align:center;
}
.ui-tab-bisect-s>li,.ui-tab-bisect-l>li{
    position: relative;
    display: inline-block;
    >span{
      position: relative;
      display: inline-block;
      height: 45px;
      line-height: 45px;
      width: auto;
      padding: 0px 5px;
      >i{
        position: absolute;
        bottom: 0px;
        left: 0px;
        width: 100%;
        height: 2px;
        background-color: transparent;
      }
    }

}
.ui-tab-bisect-s .current ,.ui-tab-bisect-l .current{
  >span >.an{
    background-color:#00a5e0;
  }
}

.ui-tab-bisect-s>li{
  width: 109px;
}
.ui-tab-bisect-l>li{
  width: 175px;
}


.ui-tab-multi .ui-tab-nav>li{
    width: auto;
    display: block;
    margin: 0px 16px;
    >span{
      position: relative;
      display: inline-block;
      height: 45px;
      line-height: 45px;
      width: auto;
      padding: 0px 5px;

    }
    i{
      position: absolute;
      bottom: 0px;
      left: 0px;
      width: 100%;
      height: 2px;
      background-color: #00a5e0;
    }
}
