.ui-panel{
    background-color: #fff;
    overflow: hidden;
    margin-bottom: 10px;
    h2,> h3{
        line-height: $line-height-title;
        font-size: 18px;
        position: relative;
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-align: center;
        padding-left: $wrap-padding;
        padding-right: $wrap-padding;

        span{
            display: -webkit-box;
        }
    }
    .ui-arrowlink:before {
        line-height: $line-height-title;
        margin-top: -$line-height-title/2;
    }
    > h4{
        font-size: 14px;
        color: #777;
        position: relative;
        line-height: 30px;
        padding-left: $wrap-padding;
        padding-right: $wrap-padding;
    }
}
.ui-panel-simple{
    margin-bottom: 0;
}
.ui-panel-subtitle{
    font-size: $font-size-sub;
    color: $txt-info;
    padding-top: 4px;
    margin-left: 5px;
}
.ui-panel-title-tips{
    font-size: $font-size-tips;
    color: $txt-info;
    position: absolute;
    right: $wrap-padding;
    top: 0;
    height: 100%;
    display: -webkit-box;
    -webkit-box-align: center;
    letter-spacing: 0;
}
.ui-arrowlink .ui-panel-title-tips{
    right: $wrap-link-padding;
}

.ui-panel-pure {

    h2,> h3,> h4{
        font-size: 14px;
        line-height: 20px;
        padding: 15px 0 5px;
        color: $txt-info;
        background-color: #f8f8f8;
    }
}

.ui-panel-center,
.ui-panel-center-multi {
    h2, > h3{
        -webkit-box-orient: vertical;
        -webkit-box-pack: center;
        text-align: center;
        letter-spacing: 6px;
        span{
            display: -webkit-box;
        }
    }
}
.ui-panel-center {
    h2, > h3{
        height: $line-height-title;
        line-height: $line-height-title;
    }
}
.ui-panel-center-multi {
    h2, > h3{
        height: 75px;
        line-height: 1.5;
    }
    .ui-panel-subtitle{
        font-size: 14px;
        margin-left: 0;
        padding-top: 0;
        letter-spacing: 0;
        margin-top: -3px;
    }
}

.ui-panel-more {
    height: $line-height-bar;
    line-height: $line-height-bar;
    text-align: center;
    margin: 0;
    padding: 0;
    font-size: 14px;
    color: #777;
    background-color: #fff;
    .ui-arrowlink {
        margin: 0;
        padding: 0;
        padding-right: 10px;
        &:before {
            line-height: $line-height-bar;
            right: 0;
            font-size: 12px;
            margin-top: -$line-height-bar/2;
        }
    }
}
