.ui-form {
    background-color: $default-bg;
}
/* 表单输入项 */
.ui-form-item {
    position: relative;
    font-size: $font-size-info;
    height: $line-height-bar;
    line-height: $line-height-bar;
    padding-right: $wrap-padding;
    padding-left: $wrap-padding;

    label:not(.ui-switch):not(.ui-checkbox):not(.ui-radio){
        // width: $form-label-width;
        // position: absolute;
        text-align: left;
        box-sizing: border-box;
    }

    input{
        // width: 100%;
        box-sizing: border-box;
        -webkit-appearance: none;
        border: 0;
        background: none;
        padding-left: 24px;
        // padding-left: $form-label-width;
        &::-webkit-input-placeholder{
            color: #bbb;
        }
    }
    .ui-icon-close{
        position: absolute;
        top: 0;
        right: 6px;
    }
}
.ui-form .ui-btn-wrap{
    padding: 27px 12px;
}
.ui-form-item-link:after {
    @include arrowlink;
}
.ui-form-item-pure{
    input{
        padding-left: 0;
    }
}
.ui-form-tips{
    text-align: right;
    padding-right: 12px;
    margin-top: 8px;
    font-size: 14px;
    color: #777;
}
.ui-input-wrap{
    .ui-input input{
        &::-webkit-input-placeholder{
            color: #777;
        }
    }
    .ui-input-text{
        background: #fff;
    }
}
