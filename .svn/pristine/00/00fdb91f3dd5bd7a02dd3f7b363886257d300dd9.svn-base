.ui-grid-icon{
  h4{
    font-size: 16px;
  }

  h5{
    font-size: 14px;
  }
  p{
    font-size: 12px;
  }
}
.ui-grid-icon >ul{
  display: -webkit-box;
  -webkit-box-orient: horizontal;
}
.ui-grid-icon-horizontal>ul li{
  -webkit-box-flex: 1;
  display: -webkit-box;
  -webkit-box-pack: center;
  -webkit-box-align: center;
  .ui-img-icon{
    margin-right: 6px;
  }
  .ui-grid-info{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-box-pack: center;
    // -webkit-box-flex: 1;
    width: auto;
  }
  
}
.ui-grid-icon-horizontal .ui-img-icon{
  width: 40px;
  height: 40px;
  &>span{
    display: block;
    width: 100%;
    height: 100%;
    z-index: 1;
    background-repeat: no-repeat;
    -webkit-background-size: cover;
  }
}
.ui-grid-icon-vertical .ui-img-icon{
  width: 50px;
  height: 50px;
  &>span{
    display: block;
    width: 100%;
    height: 100%;
    z-index: 1;
    background-repeat: no-repeat;
    -webkit-background-size: cover;
  }
}
.ui-grid-icon-vertical>ul li{
  -webkit-box-flex: 1;
  display: -webkit-box;
  -webkit-box-pack: center;
  -webkit-box-align: center;
  -webkit-box-orient: vertical;
  .ui-grid-info{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-box-pack: center;
    >h4,>h5,>p{
      text-align: center;
      width: auto;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  }
}