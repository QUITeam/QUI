.ui-tab-nav-wrap{
    width: auto;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
}
.ui-tab-nav-wrap::-webkit-scrollbar {
    display: none
}
.ui-tab-fixed{
    .ui-tab-nav{
        position: fixed;
        top: 0;
        z-index: 99;
    }
    .ui-tab-content{
        margin-top: $tab-height;
    }
}
