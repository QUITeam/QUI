
@import "../animate/animate";

/**
 * 选项卡
 */

.ui-tab{
    width: 100%;
    overflow: hidden;
}

.ui-tab-nav{
    position:relative;
    top: 0px;
    width: 100%;
    background-color: $default-bg;
    display: box;
    display: -webkit-box;
    font-size: $font-size-title;
    height: $tab-height;
    box-sizing: border-box;
}

.ui-tab-content{
    display: -webkit-box;
    -webkit-box-align:center;
    -webkit-box-pack:center;
    min-height: 40px;
    height: auto;
}
.ui-tab-content > li {
    -webkit-box-flex: 1;
    width: 100%;
    display: -webkit-box;
    -webkit-box-align:center;
    -webkit-box-pack:center;
    min-height: 40px;
    height: auto;
}
.ui-tab-nav li{
    height: $tab-height;
    line-height: $tab-height;
  	text-align: center;
	  color: $txt-info;
    box-sizing: border-box;
    border-bottom: 2px solid transparent;
    width: 100%;
    font-size: 16px;
}
.ui-tab-nav li.current{
    color: $tab-current-color;
}
.ui-tab-nav li:active{
    opacity: .8;
}
.ui-tab-nav .ui-tab-currentbar{
    position: absolute;
    bottom:0px;
    left: 0px;
    width: 25%;
    color: $tab-current-color;
    border-bottom: 3px $tab-current-border solid;
}

.ui-tab-bisect  .ui-tab-currentbar{
    width: 50%;
}
.ui-tab-trisect .ui-tab-currentbar{
    width: 33.3%;
}

//==========
.ui-tab-bisect .ui-fontnumber-s,.ui-tab-bisect .ui-fontnumber-lg,.ui-tab-trisect .ui-tab-nav,.ui-tab-quarter .ui-tab-nav,.ui-tab-quintile .ui-tab-nav{
  width: 100%;
  display: -webkit-box;
  -webkit-box-pack:center;
  -webkit-box-align:center;
}
.ui-tab-bisect .ui-fontnumber-s>li,.ui-tab-bisect .ui-fontnumber-lg>li,.ui-tab-trisect>.ui-tab-nav li,.ui-tab-quarter>.ui-tab-nav li,.ui-tab-quintile>.ui-tab-nav li{
    display: block;
    position: relative;
    >span{
      position: relative;
      display: inline-block;
      height: 45px;
      line-height: 45px;
      width: auto;
      padding: 0px 5px;

    }
    i{
      position: absolute;
      bottom: 0px;
      left: 0px;
      width: 100%;
      height: 2px;
      background-color: #00a5e0;
    }
}
.ui-tab-bisect .ui-fontnumber-s>li{
  width: 109px;
}
.ui-tab-bisect .ui-fontnumber-lg>li{
  width: 175px;
}
.ui-tab-trisect .ui-tab-nav li{
  width: 33.3%;
}
.ui-tab-quarter .ui-tab-nav li{
  width: 25%;
}
.ui-tab-quintile .ui-tab-nav li{
  width: 20%;
}
.ui-tab-multi .ui-tab-nav{
  width: auto;
}
.ui-tab-multi .ui-tab-nav>li{
    width: auto;
    display: block;
    margin: 0px 16px;
    >span{
      position: relative;
      display: inline-block;
      height: 45px;
      line-height: 45px;
      width: auto;
      padding: 0px 5px;

    }
    i{
      position: absolute;
      bottom: 0px;
      left: 0px;
      width: 100%;
      height: 2px;
      background-color: #00a5e0;
    }
}
